# Google News API
VITE_GOOGLE_NEWS_API_KEY=your_google_news_api_key
VITE_GOOGLE_NEWS_API_URL=https://newsapi.org/v2

# Supabase Integration
VITE_SUPABASE_URL=your_supabase_project_url
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key

# Firebase Integration
VITE_FIREBASE_API_KEY=your_firebase_api_key
VITE_FIREBASE_AUTH_DOMAIN=your_firebase_auth_domain
VITE_FIREBASE_PROJECT_ID=your_firebase_project_id
VITE_FIREBASE_STORAGE_BUCKET=your_firebase_storage_bucket
VITE_FIREBASE_MESSAGING_SENDER_ID=your_firebase_messaging_sender_id
VITE_FIREBASE_APP_ID=your_firebase_app_id
VITE_FIREBASE_MEASUREMENT_ID=your_firebase_measurement_id

# Social Media APIs
VITE_YOUTUBE_API_KEY=your_youtube_api_key
VITE_FACEBOOK_APP_ID=your_facebook_app_id
VITE_TWITTER_BEARER_TOKEN=your_twitter_bearer_token

# Optional: Real-time and fallback configs
VITE_ENABLE_REALTIME=true
VITE_MOCK_DATA_MODE=false

# App Environment (development, production, etc)
VITE_APP_ENV=development

# Search Configuration - Enhanced API Backend
VITE_SEARCH_PROXY_URL=http://localhost:3001/api/search
VITE_PAGING_CAP=2000
VITE_SEARCH_RESULTS_PER_PAGE=12
VITE_SEARCH_DEBOUNCE_MS=300

# Search API Provider Settings
VITE_NEWS_PROVIDER_ENABLED=true
VITE_SOCIAL_PROVIDER_ENABLED=true
VITE_GOVERNMENT_PROVIDER_ENABLED=true
VITE_WIKI_PROVIDER_ENABLED=true

# Search API Performance Settings
VITE_SEARCH_TIMEOUT_MS=10000
VITE_PROVIDER_TIMEOUT_MS=5000
VITE_MAX_RESULTS_PER_PROVIDER=50

# Infinite Scroll Configuration
VITE_INFINITE_SCROLL_DEFAULT=false
VITE_LOAD_MORE_BATCH_SIZE=12

# Category Configuration
VITE_HIDE_TECHNOLOGY_CATEGORY=true
VITE_SHOW_ADVANCED_CATEGORIES=false

# PulseReels Configuration
VITE_REELS_INFINITE_SCROLL=true
VITE_REELS_LOAD_BATCH_SIZE=6
