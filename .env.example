# .env.example

# === Google-Style Homepage API Keys ===
# Universal Search Configuration
VITE_GOOGLE_SEARCH_API_KEY=your_google_search_api_key_here
VITE_GOOGLE_SEARCH_CX=your_custom_search_engine_id_here

# Colombia News Sources (for Homepage local news)
VITE_ELTIEMPO_API_KEY=your_eltiempo_api_key_here
VITE_SEMANA_API_KEY=your_semana_api_key_here  
VITE_RCN_API_KEY=your_rcn_api_key_here
VITE_CARACOL_API_KEY=your_caracol_api_key_here
VITE_ELESPECTADOR_API_KEY=your_elespectador_api_key_here

# World/Global News Sources (for Homepage world news)
VITE_BBC_API_KEY=your_bbc_api_key_here
VITE_CNN_API_KEY=your_cnn_api_key_here
VITE_REUTERS_API_KEY=your_reuters_api_key_here
VITE_AP_NEWS_API_KEY=your_ap_news_api_key_here

# Trending Topics API
VITE_GOOGLE_TRENDS_API_KEY=your_google_trends_api_key_here

# Environment variable keys for Google-style search
REACT_APP_GOOGLE_SEARCH_API=
REACT_APP_GOOGLE_NEWS_API=
REACT_APP_GOOGLE_IMAGE_API=
REACT_APP_GOOGLE_VIDEO_API=
REACT_APP_GOOGLE_FORUMS_API=
REACT_APP_GOOGLE_SHOPPING_API=

# === Required API Keys ===
# YouTube API Key (Required for LiveDashboard video search)
# Get from: https://console.cloud.google.com/apis/credentials
VITE_YOUTUBE_API_KEY=your_youtube_api_key_here
YOUTUBE_API_KEY=your_youtube_api_key_here

# Google Custom Search API Keys (Optional - for Google Web Search)
VITE_GOOGLE_API_KEY=your_google_api_key_here
VITE_GOOGLE_CSE_ID=your_google_custom_search_engine_id_here
VITE_GOOGLE_CX=your_google_custom_search_engine_id_here

# Social Media API Keys (Optional - for cross-platform integration)
# TikTok Integration
VITE_TIKTOK_CLIENT_KEY=your_tiktok_client_key_here
VITE_TIKTOK_CLIENT_SECRET=your_tiktok_client_secret_here

# Instagram Integration  
VITE_INSTAGRAM_ACCESS_TOKEN=your_instagram_access_token_here
VITE_INSTAGRAM_APP_ID=your_instagram_app_id_here

# Facebook Integration
VITE_FACEBOOK_ACCESS_TOKEN=your_facebook_access_token_here  
VITE_FACEBOOK_APP_ID=your_facebook_app_id_here

# Twitter/X Integration
VITE_TWITTER_BEARER_TOKEN=your_twitter_bearer_token_here
VITE_TWITTER_API_KEY=your_twitter_api_key_here
VITE_TWITTER_API_SECRET=your_twitter_api_secret_here

# News API Keys (Required for LiveDashboard news articles)
# Get from: https://newsapi.org/register
VITE_NEWSAPI_KEY=your_newsapi_key_here
# Optional alternative news sources
VITE_GUARDIAN_KEY=your_guardian_api_key_here
VITE_SERPAPI_KEY=your_serpapi_key_here

# === Firebase Configuration ===
# Required for LiveDashboard real-time chat and authentication
# Get from: https://console.firebase.google.com/
VITE_FIREBASE_API_KEY=your_firebase_api_key_here
VITE_FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your_project_id_here
VITE_FIREBASE_STORAGE_BUCKET=your_project.firebasestorage.app
VITE_FIREBASE_MESSAGING_SENDER_ID=your_sender_id_here
VITE_FIREBASE_APP_ID=your_app_id_here
VITE_FIREBASE_MEASUREMENT_ID=your_measurement_id_here

# === Google Analytics ===
VITE_GOOGLE_ANALYTICS_ID=your_analytics_id_here

# === Frontend & API URLs ===
VITE_TRENDS_API=https://api.nuestropulso.com/trends
VITE_API_URL=http://localhost:3001
VITE_REEL_API=http://localhost:3001/api/reels
FRONTEND_URL=http://localhost:5173
PORT=3001

# === Colombia News Hub Configuration ===
COLOMBIA_HUB_CACHE_TIMEOUT_MINUTES=15
COLOMBIA_HUB_MAX_NEWS_ITEMS=50
COLOMBIA_HUB_MAX_VIDEO_ITEMS=20
COLOMBIA_HUB_RATE_LIMIT=1000

# === Search & Paging ===
VITE_SEARCH_PROXY_URL=http://localhost:3001/api/search
VITE_PAGING_CAP=2000
VITE_SEARCH_RESULTS_PER_PAGE=12
VITE_SEARCH_DEBOUNCE_MS=300

# === Search Providers ===
VITE_NEWS_PROVIDER_ENABLED=true
VITE_SOCIAL_PROVIDER_ENABLED=true
VITE_GOVERNMENT_PROVIDER_ENABLED=true
VITE_WIKI_PROVIDER_ENABLED=true

# === Performance Settings ===
VITE_SEARCH_TIMEOUT_MS=10000
VITE_PROVIDER_TIMEOUT_MS=5000
VITE_MAX_RESULTS_PER_PROVIDER=50

# === Infinite Scroll ===
VITE_INFINITE_SCROLL_DEFAULT=false
VITE_LOAD_MORE_BATCH_SIZE=12

# === Category Configuration ===
VITE_HIDE_TECHNOLOGY_CATEGORY=true
VITE_SHOW_ADVANCED_CATEGORIES=false

# === PulseReels ===
VITE_REELS_INFINITE_SCROLL=true
VITE_REELS_LOAD_BATCH_SIZE=6

# === Backend Environment Variables (Node.js process.env) ===
# Note: These are used by server-side code only

# Rate Limiting (requests per hour)
COLOMBIA_HUB_RATE_LIMIT=1000

# Node Environment
NODE_ENV=development

