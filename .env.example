# Firebase Configuration (Required)
VITE_FIREBASE_API_KEY=your_firebase_api_key
VITE_FIREBASE_AUTH_DOMAIN=your_firebase_auth_domain
VITE_FIREBASE_PROJECT_ID=your_firebase_project_id
VITE_FIREBASE_STORAGE_BUCKET=your_firebase_storage_bucket
VITE_FIREBASE_MESSAGING_SENDER_ID=your_firebase_messaging_sender_id
VITE_FIREBASE_APP_ID=your_firebase_app_id
VITE_FIREBASE_MEASUREMENT_ID=your_firebase_measurement_id

# News API Configuration (Required)
# Get your API key from: https://newsapi.org/register
VITE_NEWSAPI_KEY=your_newsapi_key

# Google Custom Search API Configuration (Optional - will use mock data if not provided)
# Get Google API key from: https://console.developers.google.com/
# Create Custom Search Engine at: https://cse.google.com/cse/
VITE_GOOGLE_API_KEY=your_google_api_key
VITE_GOOGLE_CSE_ID=your_custom_search_engine_id

# Search Configuration - Enhanced API Backend
REACT_APP_SEARCH_PROXY_URL=http://localhost:3001/api/search
REACT_APP_PAGING_CAP=2000
REACT_APP_SEARCH_RESULTS_PER_PAGE=12
REACT_APP_SEARCH_DEBOUNCE_MS=300

# Search API Provider Settings
REACT_APP_NEWS_PROVIDER_ENABLED=true
REACT_APP_SOCIAL_PROVIDER_ENABLED=true
REACT_APP_GOVERNMENT_PROVIDER_ENABLED=true
REACT_APP_WIKI_PROVIDER_ENABLED=true

# Search API Performance Settings
REACT_APP_SEARCH_TIMEOUT_MS=10000
REACT_APP_PROVIDER_TIMEOUT_MS=5000
REACT_APP_MAX_RESULTS_PER_PROVIDER=50

# Infinite Scroll Configuration
REACT_APP_INFINITE_SCROLL_DEFAULT=false
REACT_APP_LOAD_MORE_BATCH_SIZE=12

# Category Configuration
REACT_APP_HIDE_TECHNOLOGY_CATEGORY=true
REACT_APP_SHOW_ADVANCED_CATEGORIES=false

# PulseReels Configuration
REACT_APP_REELS_INFINITE_SCROLL=true
REACT_APP_REELS_LOAD_BATCH_SIZE=6
