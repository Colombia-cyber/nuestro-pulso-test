# Social Media APIs
VITE_YOUTUBE_API_KEY=your_youtube_api_key
VITE_FACEBOOK_APP_ID=your_facebook_app_id
VITE_TWITTER_BEARER_TOKEN=your_twitter_bearer_token

# News API Configuration (Legacy support)
VITE_NEWS_API_KEY=your_news_api_key

# Optional: Real-time and fallback configs
VITE_ENABLE_REALTIME=true
VITE_MOCK_DATA_MODE=false

# App Environment (development, production, etc)
VITE_APP_ENV=development

# Search Configuration - Enhanced API Backend
REACT_APP_SEARCH_PROXY_URL=http://localhost:3001/api/search
REACT_APP_PAGING_CAP=2000
REACT_APP_SEARCH_RESULTS_PER_PAGE=12
REACT_APP_SEARCH_DEBOUNCE_MS=300

# Search API Provider Settings
REACT_APP_NEWS_PROVIDER_ENABLED=true
REACT_APP_SOCIAL_PROVIDER_ENABLED=true
REACT_APP_GOVERNMENT_PROVIDER_ENABLED=true
REACT_APP_WIKI_PROVIDER_ENABLED=true

# Search API Performance Settings
REACT_APP_SEARCH_TIMEOUT_MS=10000
REACT_APP_PROVIDER_TIMEOUT_MS=5000
REACT_APP_MAX_RESULTS_PER_PROVIDER=50

# Infinite Scroll Configuration
REACT_APP_INFINITE_SCROLL_DEFAULT=false
REACT_APP_LOAD_MORE_BATCH_SIZE=12

# Category Configuration
REACT_APP_HIDE_TECHNOLOGY_CATEGORY=true
REACT_APP_SHOW_ADVANCED_CATEGORIES=false

# PulseReels Configuration
REACT_APP_REELS_INFINITE_SCROLL=true
REACT_APP_REELS_LOAD_BATCH_SIZE=6

# Server Configuration (for backend)
PORT=3001
FRONTEND_URL=http://localhost:5173
NODE_ENV=development
